//Database schema to build the backend DB.

// 1. Database Configuration
datasource db {
  provider  = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

// 2. Models

// For your Admin Login
model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String   // Hashed password
}

// For your Portfolio Projects
model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  imageUrl    String   // URL from Supabase Storage
  repoLink    String
  liveLink    String?  // '?' means this is optional (nullable)
  techStack   String[] // Array of strings e.g. ["React", "Node"]
  relatedBlogSlug String?  // <--- ADD THIS (Optional link to a blog)
  createdAt   DateTime @default(now())
}

// For your Blog
model BlogPost {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  content     String
  coverImage  String?
  published   Boolean  @default(false)
  category    String   @default("General") // <--- ADD THIS LINE
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// For the LinkTree page
model Link {
  id     Int    @id @default(autoincrement())
  title  String
  url    String
  active Boolean @default(true)
}